<h2>Create an Author</h2>

<%=form_tag authors_path do%>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%=pluralize(@author.errors.count, "error")%>
        Prohibited this author from being saved:
      </h2>
      <ul>
      <%@author.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
      <%end%>
      </ul>
    </div>
  <%end%>

  <div class="field<%= ' field_with_errors' if @author.errors[:name].any? %>">
    <%=label_tag 'Author name'%>
    <%=text_field_tag :name %>
  </div>
  <div class="field<%= ' field_with_errors' if @author.errors[:email].any? %>">
    <%=label_tag 'Email'%>
    <%=text_field_tag :email %>
  </div>
  <div class="field<%= ' field_with_errors' if @author.errors[:phone_number].any? %>">
    <%=label_tag 'Author phone number'%>
    <%=text_field_tag :phone_number %>
  <%= submit_tag %>
  </div>
<%end%>
